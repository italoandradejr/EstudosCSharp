@model IEnumerable<ProjetoIptu.Models.PesquisaViewModel>

@{
    ViewBag.Title = "Resultados";
}

<h2>Resultados da Pesquisa</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Propriedade</th>
                <th>Grupo</th>
                <th>Data Início</th>
                <th>Data Fim</th>
                <th>Empreendimento</th>
                <th>Contribuinte/Imovel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Proprietario</td>
                    <td>@item.Grupo</td>
                    <td>@(item.DataInicio.HasValue ? item.DataInicio.Value.ToShortDateString() : "")</td>
                    <td>@(item.DataFim.HasValue ? item.DataFim.Value.ToShortDateString() : "")</td>
                    <td>@item.Empreendimento</td>
                    <td>@item.ContribuinteImovel</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum resultado encontrado.</p>
}

<a asp-controller="Pesquisa" asp-action="Index" class="btn btn-primary">Voltar para a página de pesquisa</a>
